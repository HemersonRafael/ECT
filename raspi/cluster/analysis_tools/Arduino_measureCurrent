int sensor = A5;
double corrente = 0;
double leitura = 0;
int seg = 0;
//Valores que o Arduino vai ler de tensao
double voltsPorUnidade = 5.00/1023;

//Mapeamento de Vout do sensor considerando seus parametros, retornando o valor de tensao de saida normalizado
double mapFloat(int leitura);

void setup(){
  Serial.begin(9600);
  pinMode(sensor, INPUT);
}

void loop(){
   //media de valores de corrente medidos ao longo de 1 segundo
   for(int j = 0; j < 1000; j++){
     //valor lido normalizado
     leitura = mapFloat(analogRead(sensor));
     //somando corrente no tempo, convertendo: (V / (66 mV / 1 A)) = V * ( 1 A / 66 * 10e-3 V) = V * (1000/66)A/V
     corrente+= leitura*(1000/66);
     delay(1);
   }
   seg++;
   corrente/= 1000;
   Serial.print("Valor em Amperes: ");
   Serial.print(corrente,4);
   Serial.print(" No tempo (s) = ");
   Serial.println(seg);
   corrente = 0;
   
}

double mapFloat(int leitura){ 
   return (leitura-510.00)*voltsPorUnidade;
}